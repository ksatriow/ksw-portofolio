<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Certificates</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <%- include('../partials/header'); %>
  </head>
<body>
  <%- include('../partials/navcms'); %>
  <body class="container" style="margin-top: 50px;">
      <div class="card"> 
          <div class="card-header">
              <ul class="nav nav-pills w-100">
                  <li class="nav-pill active">
                      <a class="nav-link">Certificate</a>
                  </li>
                  <li class="nav-pill ml-auto">
                      <a class="nav-link active" href="/cms/create">Add Certificate</a>
                  </li>
              </ul>
          </div>
      </div>
      <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th width="200px">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i< article.length; i++) { %>
                    <tr>
                        <th scope="row"><%= (i+1) %></th>
                        <td><%= article[i].title%></td>
                        <td><%= article[i].description%></td>
                        <td>
                            <a class="btn btn-success edit" method="POST" href="../cms/update/<%=article[i].id%>">Edit</a>                       
                            <a class="btn btn-danger delete" onclick="return alert('Are You sure?')" href="../cms/delete/<%=article[i].id%>">Delete</a>                       
                        </td>
                    </tr>
                <% } %>
                </tbody>
        </table>
        </div>
    </div>
  </body>
</body>
</html>